			"voice_modulation": "Normal",
			"audio": "res://assets/audio/commander_line3.ogg",
			"replies": [
			  {
				"text": "Acknowledged.",
				"next": "end",
				"set_flags": ["received_report"],
				"audio": "res://assets/sfx/dialogue_click.mp3",
				"custom_event": "report_acknowledged",
				"custom_payload": { "reported": true }
			  }
			]
		  },
		  "end": {
			"message": "End of transmission.",
			"sender": "operator",
			"voice_modulation": "Normal",
			"audio": "res://assets/audio/commander_line4.ogg",
			"replies": []
		  }
		}
	  }
