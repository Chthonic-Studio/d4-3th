				"set_flags": ["replied_to_command"],
				"audio": "res://assets/sfx/dialogue_click.mp3"
			  },
			  {
				"text": "I read you. Situation report?",
				"next": "report",
				"set_flags": ["asked_for_report"],
				"conditions": ["has_radio_contact"],
				"audio": "res://assets/sfx/dialogue_click.mp3"
